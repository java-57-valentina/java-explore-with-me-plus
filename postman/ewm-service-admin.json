{
  "info": {
    "name": "EWM Users API",
    "_postman_id": "7ad1e4a2-fef0-4fd7-b260-efd1b8989aaa",
    "description": "Проверка API /admin/users",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Создать пользователя",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Иван Иванов\",\n  \"email\": \"ivan@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/admin/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["admin", "users"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Статус 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Ответ содержит id\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.be.a('number');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Получить всех пользователей",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/admin/users?from=0&size=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["admin", "users"],
          "query": [
            { "key": "from", "value": "0" },
            { "key": "size", "value": "10" }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Статус 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Список не пуст\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.length).to.be.above(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Удалить пользователя по ID",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8080/admin/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["admin", "users", "1"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Статус 204\", function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}